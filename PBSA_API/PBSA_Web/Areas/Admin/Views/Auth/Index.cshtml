
@{
    ViewData["Title"] = "Index";
}
<link href="~/css/style.css" rel="stylesheet" />

<title>Login</title>
<div class="peers ai-s fxw-nw h-100vh">
    <div class="d-n@sm- peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv" style="background-image:url(assets/static/images/bg.jpg)">
        @*<div class="pos-a centerXY">
            <div><img class="pos-a centerXY" src="assets/static/images/logo-02.png" alt=""></div>
        </div>*@
    </div>
    <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r ps" style="min-width:320px">
        <img src="assets/static/images/logo-02.png" alt="">
        <h4 class="fw-300 c-grey-900 mB-40">Login</h4>
        <form>
            <div class="form-group"><label class="text-normal text-dark">Username</label><input type="text" id="txtUsername" class="form-control" placeholder="Username"></div>
            <div class="form-group"><label class="text-normal text-dark">Password</label><input type="password" id="txtPassword" class="form-control" placeholder="Password"></div>
            <div class="form-group">
                <div class="peers ai-c jc-sb fxw-nw">
                    <div class="peer">

                    </div>
                    <div class="peer"><button type="button" class="btn btn-primary" onclick="Login()">Login</button></div>
                </div>
            </div>
        </form>
        <div class="ps__rail-x" style="left: 0px; bottom: 0px;">
            <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
        </div>
        <div class="ps__rail-y" style="top: 0px; right: 0px;">
            <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
        </div>
    </div>
</div>

<script src="~/js/vendor.js"></script>
<script src="~/js/bundle.js"></script>
<script src="~/js/common.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/auth.js"></script>