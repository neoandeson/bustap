
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<link href="~/css/mycss.css" rel="stylesheet" />
<link href="~/css/mytable.css" rel="stylesheet" />
<title>Staff | Face Shape Management</title>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <table>
                    <tr>
                        <td style="padding: 0" class="col-10"><h2 class="c-grey-900 mT-10 mB-30">Face Shape Management</h2></td>
                        <td style="padding: 0" class="col-2"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="AddHairStyle()">Add Face Shape</button></td>
                    </tr>
                </table>
                <table id="faceTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!--Begin Modal-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="mymodal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <table class="my_table">
                        <tbody>
                            <tr>
                                <td class="my_label width5em">Face shape name<span class="requiredField"></span></td>
                                <td class="width20em"><input id="txtName" class="form-control width20em" type="text" maxlength="20" required></td>
                            </tr>
                            <tr>
                                <td class="my_label">Description</td>
                                <td><input id="txtDescription" class="form-control" type="text" maxlength="256" required></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button id="btnClose" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="btnAdd" type="button" class="btn btn-success" onclick="CreateFaceShape()">Add</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Modal-->
</div>

<script src="~/js/common.js"></script>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        DrawTable();
    });

    function DrawTable() {
        $('#faceTable').dataTable().fnDestroy();

        $('#faceTable').dataTable({
            "processing": false,
            "serverSide": false,
            "ajax": {
                "url": GetURL("faceshape/get-all-table"),
                "type": "GET"
            },
            "columns": [
                {
                    width: "8%",
                    render: function (data, type, row, meta) {
                        return meta.row + meta.settings._iDisplayStart + 1;
                    }
                },
                {
                    data: "name",
                    width: "15%",
                },
                { data: "description" },
                {
                    data: 'id',
                    width: "15%",
                    render: function (data, type, row) {
                        var buttonView = '<button type="button" class="btn btn-primary" onclick="GotoDetail(\'' + data + '\')">Detail</button>';
                        var buttonDelete = '<button type="button" class="btn btn-danger" onclick="Delete(\'' + data + '\')">Delete</button>';
                        return buttonView + '&nbsp;'+ buttonDelete;
                    }
                }
            ]
        });
    }

    function GotoDetail(id) {
        window.open("/Admin/FaceShape/Detail?Id=" + id);
    }

    function Delete(id) {
        $.ajax({
            type: 'POST',
            url: GetURL("faceshape/delete", { "id": id}),
            dataType: 'json',
            success: function () {
                alert(`Delete face shape successfully`);
                DrawTable();
            }
        });
    }

    function AddHairStyle() {
        $('#myModalLabel').text("Add face shape");
        $('#txtName').val("");
        $('#txtDescription').val("");
    }

    function CreateFaceShape() {
        if (!isvalidTextInput('#txtName')) {
            alert("Please full fill required information");
            return;
        }

        $.ajax({
            type: "POST",
            "contentType": "application/json-patch+json",
            url: GetURL("faceshape/add"),
            data: JSON.stringify({
                "id": 0,
                "name": $('#txtName').val(),
                "description": $('#txtDescription').val(),
            }),
            success: function () {
                alert("Add successfully");
                DrawTable();
            }
        });
    }
</script>
