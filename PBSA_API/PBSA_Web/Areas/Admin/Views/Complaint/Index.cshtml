
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    //var checkinDistance = float.Parse(DataService.Constants.SystemConstants.CheckinAcceptableDistance) * 1000;
}
<link href="~/css/complaintcss.css" rel="stylesheet" />
<link href="~/css/mycss.css" rel="stylesheet" />
<link href="~/css/mytable.css" rel="stylesheet" />
<link href="~/css/carousel.css" rel="stylesheet" />
<title>PBSA | Complaint</title>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <h2 class="c-grey-900 mT-10 mB-30">Complaint Management</h2>
                <table id="complaintTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Type</th>
                            <th>State</th>
                            <th>Created Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!--Begin Modal-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="mymodal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <table class="my_table">
                        <thead class="my_thead">
                            <tr>
                                <td colspan="8">Compliant's content</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="my_label">Barber <span id="barberActor"></span> :</td>
                                <td class="my_tdMinWidth"><span id="txtBName"></span></td>
                                <td class="my_label">Type :</td>
                                <td><span id="txtType"></span></td>
                                <td class="my_label">State :</td>
                                <td><span id="txtState"></span></td>
                                <td class="my_label">Created Time :</td>
                                <td><span id="txtCreatedTime"></span></td>
                            </tr>
                            <tr>
                                <td class="my_label">Customer <span id="customerActor"></span> :</td>
                                <td class="my_tdMinWidth"><span id="txtCName"></span></td>
                                <td class="my_label">Booked Time :</td>
                                <td><span id="txtBookedTime"></span></td>
                                <td class="my_label">Staff Name :</td>
                                <td><span id="txtStaffName"></span></td>
                                <td class="my_label">Resolved Time :</td>
                                <td><span id="txtResolvedTime"></span></td>
                            </tr>
                            <tr>
                                <td class="my_label">Detail :</td>
                                <td colspan="7"><span id="txtDetail"></span></td>
                            </tr>
                        </tbody>
                    </table>

                    <table class="my_table">
                        <tr>
                            <td>
                                <table class="my_table" style="width: 30em">
                                    <thead class="my_thead">
                                        <tr>
                                            <td colspan="2" id="hdBookingHistory">Booking history</td>
                                        </tr>
                                    </thead>
                                    <tbody id="bookingHis">
                                        <tr>
                                            <th>Booking state</th>
                                            <th>Time</th>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="my_table" style="width: 30em;height: 13em;margin-bottom: 0;">
                                    <thead class="my_thead">
                                        <tr>
                                            <td id="hdComplaintImage" colspan="2">Complaint images</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div id="slider">
                                                    <a href="#" class="control_next">></a>
                                                    <a href="#" class="control_prev"><</a>
                                                    <ul id="complaintImg"></ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td id="mapBooking" class="googleMap"></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button id="btnApprove" type="button" class="btn btn-success" onclick="ApproveComplaint()">Approve</button>
                    <button id="btnReject" type="button" class="btn btn-danger" onclick="RejectComplaint()">Reject</button>
                    <button id="btnClose" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                <input id="txtId" type="hidden" />
                <div id="hdnDiv"></div>
            </div>
        </div>
    </div>
    <!--End Modal-->
    <!--hiden image for map icons-->
    <img id="userIcon" src="~/assets/static/images/userIcon.png" hidden>
    <img id="barberIcon" src="~/assets/static/images/barberIcon.png" hidden>
</div>

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/js/carousel.js"></script>
<script src="~/js/common.js"></script>
<script type="text/javascript">
    gmarkers = [];

    $(document).ready(function () {
        DrawTable();
    });

    function DrawTable() {
        $('#complaintTable').dataTable().fnDestroy();

        $('#complaintTable').dataTable({
            "processing": false,
            "serverSide": false,
            "ajax": {
                "url": GetURL("complaint/get-all-table"),
                "type": "GET"
            },
            "columns": [
                {
                    render: function (data, type, row, meta) {
                        return meta.row + meta.settings._iDisplayStart + 1;
                    }
                },
                {
                    "data": "type",
                    width: "25%",
                },
                {
                    "data": "state",
                    width: "25%"
                },
                {
                    width: "25%",
                    data: 'createdTime',
                    render: function (data) {
                        return parseDate(data);
                    }
                },
                {
                    data: 'id',
                    render: function (data) {
                        return '<button type="button" class="btn btn-primary" onclick="GotoComplaintDetail(\'' + data + '\')">Detail</button>';
                    }
                }
            ]
        });
    }

    function GotoComplaintDetail(id) {
        window.open("/Admin/Complaint/Detail?Id=" + id, 'blank');
    }

</script>